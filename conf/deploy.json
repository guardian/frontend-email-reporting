{
  "defaultStacks":[ "frontend-email-reporting" ],
  "packages":{
    "frontend-email-reporting":{
      "type":"autoscaling",
      "data": {
        "secondsToWait": 900,
        "port": 9000,
        "healthcheckGrace": 20,
        "bucket": "frontend-email-reporting-dist",
        "healthcheck_paths": ["/healthcheck"]
      }
    }
  },
  "recipes":{
    "default":{
      "actionsBeforeApp": ["frontend-email-reporting.uploadArtifacts", "frontend-email-reporting.deploy"]
    },
    "deployOnly": {
      "actionsBeforeApp": ["frontend-email-reporting.deploy"]
    },
    "artifactUploadOnly": {
      "actionsBeforeApp": ["frontend-email-reporting.uploadArtifacts"]
    }
  }
}
